@using System.Collections.Generic;
@using BOL;



@{
  ViewData["Title"] = "Products";
}


<head>
  <link rel="stylesheet" href="~/css/products.css" asp-append-version="true" />
</head>





@{
  List<Products> allProd = (List<Products>)this.ViewData["product"];
}

<body class="tab">
  <div>
    <table class="container">
      <thead>
        <tr>
          <th>
            <h1>Id</h1>
          </th>
          <th>
            <h1>Names</h1>
          </th>
          <th>
            <h1>Price</h1>
          </th>
          <th>
            <h1>Action</h1>
          </th>
        </tr>
      </thead>
      <tbody>

        @foreach (Products p in allProd)
        {
          <tr style="background-color: rgb(93, 54, 54);">
            <td>@p.Id</td>
            <td>@p.Name</td>
            <td>@p.Price</td>
            <td><a href="Edit/@p.Id" name="id" value="@p.Id">Edit</a> / <a href="Delete/@p.Id" name="id">Delete</a></td>
          </tr>
        }
      </tbody>
    </table>


    <a href="Insert">Add Product</a>

</body>
