@using System.Collections.Generic;
@using BOL;



@{
  ViewData["Title"] = "Products";
}

@{
  List<Products> allProd = (List<Products>)this.ViewData["product"];
}
<table class="container">
  <thead>
    <tr>
      <th>
        <h1>Id</h1>
      </th>
      <th>
        <h1>Names</h1>
      </th>
      <th>
        <h1>Price</h1>
      </th>
      <th>
        <h1>Action</h1>
      </th>
    </tr>
  </thead>
  <tbody>

    @foreach (Products p in allProd)
    {
      <tr>
        <td>@p.Id</td>
        <td>@p.Name</td>
        <td>@p.Price</td>
        <td><a href="Edit/@p.Id" name="id" value="@p.Id">Edit</a></td>
      </tr>
    }
  </tbody>
</table>


